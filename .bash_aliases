# Custom Aliases
alias breset="source ~/.bashrc"
alias pathy='echo $PATH | sed "s/:/\n/g"'
alias setbackground="feh --bg-scale"
alias dualscreen="bash ~/.screenlayout/dual-lg.sh"
alias singlescreen="bash ~/.screenlayout/single-fw.sh"
alias vim="nvim"
alias nv="nvim"


## config
alias configaliases="nvim ~/.bash_aliases"
alias configbar="nvim ~/.config/i3status/config"
alias configbashrc="nvim ~/.bashrc"
alias configi3="nvim ~/.config/i3/config"
alias configneovim="nvim ~/.config/nvim/init.vim"
alias configpicom="nvim ~/.config/picom/picom.conf"
alias configterminal="nvim ~/.alacritty.yml"


## git
alias ga="git add"
alias gb="git branch"
alias gca="git commit --amend"
alias gcv="git commit -v"
alias gl="git log"
alias glo="git log --oneline"
alias gs="git status"
