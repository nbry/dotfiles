general {
        colors = true 
        interval = 5
}

# order += "cpu_temperature 0"
# order += "disk /"
# order += "ethernet _first_"
# order += "load"
# order += "cpu_usage"

order += "volume master"
order += "memory"
order += "battery all"
order += "tztime utc"
order += "tztime local"
order += "wireless _first_"

wireless _first_ {
        format_up = "W"
        format_down = "W"
}

cpu_temperature 0 {
				format = "T: %degrees Â°C"
				path = "/sys/devices/platform/coretemp.0/temp1_input"
}

cpu_usage {
    format = "CPU: %usage"
}

memory {
        format = "RAM: %used"
        threshold_degraded = "10%"
        format_degraded = "MEMORY: %free"
}
				
ethernet _first_ {
        # if you use %speed, i3status requires root privileges
        format_up = "Ethernet"
        format_down = "Ethernet"
}

battery all {
        format = "%status: %percentage %remaining"
        status_chr = "âš¡"
        status_bat = "ðŸ”‹"
        status_full = "â˜»"
}

tztime utc {
        format = "%Z: %H:%M:%S"
        timezone = "Etc/UTC"
}

tztime local {
        format = "%Z: %H:%M:%S %Y-%m-%d"
}

load {
        format = "CPU: %1min"
}

disk "/" {
        format = "NVME: %avail"
}

volume master {
        format = "VOL: %volume"
        format_muted = "MUT: %volume"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}
