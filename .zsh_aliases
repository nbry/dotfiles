# Custom Aliases
alias zreset="source ~/.zshrc"
alias pathy='echo $PATH | sed "s/:/\n/g"'
alias setbackground="feh --bg-scale"
alias dualscreen="zsh ~/.screenlayout/dual-lg.sh"
alias singlescreen="zsh ~/.screenlayout/single-fw.sh"
alias vim="nvim"
alias nv="nvim"
alias tarxf="tar -xf"
alias xclip="xclip -selection c"


## config
alias configaliases="nvim ~/.zsh_aliases"
alias configbar="nvim ~/.config/i3status/config"
alias configzshrc="nvim ~/.zshrc"
alias configi3="nvim ~/.config/i3/config"
alias configneovim="nvim ~/.config/nvim/init.vim"
alias configpicom="nvim ~/.config/picom/picom.conf"
alias configterminal="nvim ~/.alacritty.yml"
alias python="python3"


## git
alias ga="git add"
alias gb="git branch"
alias gca="git commit --amend"
alias gcv="git commit -v"
alias gl="git log"
alias glo="git log --oneline"
alias glon="git log --oneline -n"
alias gs="git status"
