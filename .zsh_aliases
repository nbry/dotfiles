## git
alias ga="git add"
alias gb="git branch"
alias gca="git commit --amend"
alias gcv="git commit -v"
alias gl="git log"
alias glo="git log --oneline"
alias glon="git log --oneline -n"
alias gs="git status"
alias gp="git push"
alias gpso="git push --set-upstream origin"

function mod_commit () {
  git stash;
  git rebase -i HEAD~"$1";
  git stash pop;
  git add .
  git commit --amend --no-edit
  git rebase --continue
}
